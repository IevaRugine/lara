{% extends 'base.html.twig' %}

{% block title %}Available Outfits {% endblock %}

{% block body %}
    <h1>Available Outfits âœ…</h1>
    List filter by:
         <form action="{{ path('outfits_index')}}" method="GET">
            <select name="master_id">
            <option value="0">View All</option>
            {% for master in masters %}
            <option value="{{master.id}}" {% if masterId == master.id %}selected{% endif %}>{{master.name}} {{master.surname}}</option>
            {% endfor %}
            </select>
            <button type="submit">Filter IT!</button>
        </form>
    <a href="{{ path('outfits_index')}}">CLEAR</a>
    <ul>
    {% for outfit in outfits %}
        <li>
        {{outfit.type}} {{outfit.master.name}} {{outfit.master.surname}}
        <a href="{{ path('outfits_edit', {id: outfit.id}) }}">EDIT</a>
        <form action="{{ path('outfits_delete', {id: outfit.id}) }}" method="POST">
        <button type="submit">DELETE</button>
        </form>
        </li>
    {% endfor %}
    </ul>
        <a href="{{ path('outfits_create') }}">GO TO CREATE OUTFIT</a>
        <a href="{{ path('masters_create') }}">GO TO CREATE MASTER</a>
{% endblock %}